{
  "//": "The production flag is added in the jenkins build script.",
  "name": "lms-sync-users",
  "description": "Node.js based API template application.",
  "main": "app.js",
  "private": true,
  "scripts": {
    "test:integration": "cross-env NODE_ENV=test tape \"test/integration/*.js\" -r dotenv/config | tap-spec",
    "coverage": "cross-env NODE_ENV=development istanbul cover tape -- \"messages/*.js\" -- \"server/**/*.js\" -- \"test/**/*.js\"",
    "format": "prettier-standard \"**/*.{js,md,yml,json}\"",
    "test": "prettier-standard --lint --check \"**/*.{js,md,yml,json}\" && cross-env NODE_ENV=test tape \"test/unit/**/*.js\" | tap-spec",
    "test:docker-integration": "apk update; apk add python make; npm install --no-optional; npm run test:integration",
    "start": "cross-env NODE_ENV=development nodemon app.js",
    "debug": "NODE_ENV=development node --nolazy --inspect-brk=9229 app.js | bunyan -o short",
    "test-integration-in-docker": "ID=$(docker build -q .) && LOCAL_IMAGE_ID=$ID docker-compose -f docker-compose-integration-tests.yml up --abort-on-container-exit --always-recreate-deps"
  },
  "dependencies": {
    "@kth/reqvars": "^2.0.1",
    "bluebird": "^3.7.1",
    "bunyan": "^1.8.12",
    "dotenv": "^6.2.0",
    "express": "^4.17.0",
    "got": "^9.6.0",
    "kth-canvas-api": "^0.15.6",
    "kth-node-server": "^3.1.2",
    "moment": "^2.24.0",
    "rhea": "^1.0.12",
    "urlencode": "^1.1.0"
  },
  "devDependencies": {
    "azure-common": "^0.9.22",
    "azure-sb": "^0.10.6",
    "blue-tape": "^1.0.0",
    "cross-env": "^5.2.1",
    "istanbul": "^0.4.5",
    "nodemon": "^1.19.4",
    "prettier-standard": "^15.0.1",
    "proxyquire": "^2.1.3",
    "randomstring": "^1.1.5",
    "rewire": "^2.5.2",
    "rewire-global": "^1.0.11",
    "sinon": "^5.1.1",
    "tap-spec": "^5.0.0",
    "tape": "^4.11.0"
  }
}

{
  "//": "The production flag is added in the jenkins build script.",
  "name": "lms-sync",
  "version": "1.2.0",
  "description": "Node.js based API template application.",
  "main": "app.js",
  "private": true,
  "scripts": {
    "test": "cross-env NODE_ENV=development tape \"test/unit/**/*.js\" | tap-spec",
    "test:integration": "cross-env NODE_ENV=development tape \"test/integration/**/*.js\" | tap-spec",
    "coverage": "cross-env NODE_ENV=development istanbul cover tape -- \"messages/*.js\" -- \"server/**/*.js\" -- \"test/**/*.js\"",
    "verify": "npm test && npm run codecheck",
    "codecheck": "standard",
    "nodeInspector": "node-inspector --web-port 8890",
    "openDebugBrowser": "sleep 2s && open http://127.0.0.1:8890/\\?port\\=5858 &2>/dev/null",
    "installAndStart": "yarn install --ignore-engines && npm start",
    "start": "cross-env NODE_ENV=development node app.js",
    "start-nodemon": "cross-env NODE_ENV=development node app.js",
    "create-users-file": "cross-env NODE_ENV=development node scripts/createUsersFile.js",
    "create-csv-files": "npm run create-users-file && npm run create-courses-files",
    "create-courses-files": "export TERMIN=2017:1 && export PERIOD=3 && cross-env NODE_ENV=development node scripts/createCoursesFile.js  && npm run create-enrollments-file",
    "create-enrollments-file": "cross-env NODE_ENV=development node scripts/createEnrollmentsFile.js",
    "startDebug": "node --debug app.js",
    "cleanLocalFiles": "rm -rf ./CSV ./MSG ./REPLAY ./AZURETEST",
    "debug": "cross-env NODE_ENV=development concurrently --kill-others \"npm run startDebug\" \"npm run nodeInspector\" \"npm run openDebugBrowser\""
  },
  "pre-push": [
    "codecheck",
    "test"
  ],
  "dependencies": {
    "amqp10": "^3.4.2",
    "blue-tape": "^1.0.0",
    "bluebird": "^3.4.7",
    "colors": "^1.1.2",
    "express": "^4.14.0",
    "kth-canvas-api": "^0.4.4",
    "kth-node-configuration": "KTH/kth-node-configuration.git#v1.0.1",
    "kth-node-log": "KTH/kth-node-log.git",
    "kth-node-server": "KTH/kth-node-server.git",
    "ldapjs": "^1.0.1",
    "message-type": "github:kth/node-message-type",
    "request-promise": "^4.1.0",
    "urlencode": "^1.1.0"
  },
  "devDependencies": {
    "yarn": "^0.19.1",
    "concurrently": "^2.2.0",
    "cross-env": "^2.0.0",
    "istanbul": "^0.4.4",
    "kth-canvas-utilities": "github:kth/kth-canvas-utilities",
    "pre-push": "^0.1.1",
    "proxyquire": "^1.7.10",
    "randomstring": "^1.1.5",
    "node-queue-adapter": "github:kth/node-queue-adapter",
    "rewire": "^2.5.2",
    "rewire-global": "^1.0.11",
    "sinon": "^1.17.6",
    "standard": "^7.1.2",
    "tap-spec": "^4.1.1",
    "tape": "^4.6.0"
  },
  "optionalDependencies": {
    "nodemon": "^1.10.0"
  },
  "engines": {
    "node": "4.3.1"
  }
}
